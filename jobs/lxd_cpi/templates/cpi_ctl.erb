#!/bin/bash

LOG_DIR=/var/vcap/sys/log/lxd_cpi
RUN_DIR=/var/vcap/sys/run/lxd_cpi
PIDFILE=$RUN_DIR/cpi.pid

case $1 in

  start)
    mkdir -p           $RUN_DIR $LOG_DIR
    chown -R vcap:vcap $RUN_DIR $LOG_DIR

    # Hack to fix permission issues?!
    mkdir -p /var/vcap/data/sys
    chmod 755 /var/vcap/data
    chmod 755 /var/vcap/data/sys

    echo 1 > $PIDFILE
    ;;

  stop)
    rm -f $PIDFILE

    ;;

  *)

  echo "Usage: cpi_ctl {start|stop}" ;;
esac
