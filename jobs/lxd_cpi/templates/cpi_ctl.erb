#!/bin/bash

LOG_DIR=/var/vcap/sys/log/lxd_cpi
RUN_DIR=/var/vcap/sys/run/lxd_cpi
PIDFILE=$RUN_DIR/cpi.pid
SUDOERS_FILE=/etc/sudoers.d/lxd_cpi

case $1 in

  start)
    mkdir -p $RUN_DIR
    chown -R vcap:vcap $RUN_DIR

    # Logs are generated by bin/cpi
    mkdir -p $LOG_DIR
    chown -R vcap:vcap $LOG_DIR

    cp /var/vcap/jobs/lxd_cpi/config/sudoers $SUDOERS_FILE
    chmod 440 $SUDOERS_FILE

    echo 1 > $PIDFILE
    ;;

  stop)
    rm -f $SUDOERS_FILE
    rm -f $PIDFILE

    ;;

  *)

  echo "Usage: cpi_ctl {start|stop}" ;;
esac
