#!/bin/bash

LOG_DIR=/var/vcap/sys/log/lxd_cpi/cleanup.log
exec > ${LOG_DIR} 2>&1

pkgs_dir=${BOSH_PACKAGES_DIR:-/var/vcap/packages}
jobs_dir=${BOSH_JOBS_DIR:-/var/vcap/jobs}

platform=$(uname | tr '[:upper:]' '[:lower:]')
exec $pkgs_dir/lxd_cpi/bin/cleanup-${platform} -configPath $jobs_dir/lxd_cpi/config/cpi.json
