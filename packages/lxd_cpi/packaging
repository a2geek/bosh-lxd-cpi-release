# Pieces borrowed from other Go CPI implementations

set -ex

if [ -z "$BOSH_PACKAGES_DIR" ]; then
	pkg_dir=$(readlink -nf /var/vcap/packages/golang-1.22-linux)
else
	pkg_dir=$BOSH_PACKAGES_DIR/golang-1.22-linux
fi

source ${pkg_dir}/bosh/compile.env

# Since HOME is not set we must set GOPATH and GOCACHE
mkdir -p /tmp/go/.cache
export GOPATH=/tmp/go
export GOCACHE=${GOPATH}/.cache

mkdir -p $BOSH_INSTALL_TARGET/bin

go build -mod=vendor -o $BOSH_INSTALL_TARGET/bin/cpi .
